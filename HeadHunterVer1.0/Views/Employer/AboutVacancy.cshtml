@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HeadHunterVer1._0.ViewModels.VacancyViewModel
@inject UserManager<User> UserManager
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row container">
    <div class="col-md-8">
        <div class="card mb-8">
            <div class="card-body">
                <h5 class="card-title">Заголовок:@Model.Title</h5>
                <p class="card-text">Зарплата: @Model.Wages</p>
                <p class="card-text">Описание: @Model.Description</p>
                <p class="card-text">Опыт работы от: @Model.ExperienceYearsTo</p>
                <p class="card-text">Опыт работы до: @Model.ExperienceYearsFrom</p>
                <p class="card-text">Категория профессии: @Model.SelectedCategoryName</p>
                <p class="card-text">
                    Опубликовано:
                    @if (Model.IsPublished == false)
                    {
                        <p>Нет</p>
                    }
                    else
                    {
                        <p>Да</p>
                    }
                </p>
                @if (User.IsInRole("employer"))
                {
                    <a class="btn-outline-success btn text-decoration-none" asp-area="" asp-controller="Employer" asp-action="AboutProfile" asp-route-id="@UserManager.GetUserId(User)">Вернуться обратно</a>
                }
            </div>
        </div>
    </div>
</div>