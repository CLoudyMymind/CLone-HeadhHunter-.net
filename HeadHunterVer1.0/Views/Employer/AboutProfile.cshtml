@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HeadHunterVer1._0.ViewModels.AboutViewModel
@inject UserManager<User> UserManager

@{
    ViewBag.Title = "Личный кабинет";
    Layout = "_Layout";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="container">
    <h1 class="text-black text-center fs-3">Добро пожаловать в личный кабинет</h1>
    <hr>
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="card" style="width: 100%;">
                <img src="@Model.PathFile" class="card-img-top w-100 h-100" alt="Path File">
                <div class="card-body">
                    <p class="card-text card-title">
                        <strong>Имя:</strong> @Model.NameCompanyOrUser
                    </p>
                    <p class="card-text card-title">
                        <strong>Почта:</strong> @Model.Email
                    </p>
                    <p class="card-text card-title">
                        <strong>Роль:</strong> @Model.Role
                    </p>
                </div>
                <a class="btn btn-outline-success" asp-area="" asp-controller="Accounts" asp-action="DownloadPdf" asp-route-id="@UserManager.GetUserId(User)">Скачать данные</a>
                        <a asp-action="EditProfile" asp-controller="Accounts" asp-route-id="@UserManager.GetUserId(User)" class="btn-outline-success btn">Редактировать профиль</a>
                        <a asp-action="Create" class="btn-outline-success btn" asp-controller="Employer" methods="get" asp-route-id="@UserManager.GetUserId(User)">Создать вакансию</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var data in @Model.VacancyViewModels)
    {
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title"><a>@data.Title</a></h5>
                    <p class="card-text">Wages: @data.Wages</p>
                    <p class="card-text">Experience To: @data.ExperienceYearsTo</p>
                    <p class="card-text">Experience From: @data.ExperienceYearsFrom</p>
                    <p class="card-text">Selected Category: @data.SelectedCategoryName</p>
                </div>
            </div>
        </div>
    }
</div>
