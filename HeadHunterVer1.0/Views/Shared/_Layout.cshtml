@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
@inject UserManager<User> UserManager

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - HeadHunterVer1._0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Accounts" asp-action="Index">HeadHunterVer1._0</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("employer"))
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employer" asp-action="AboutProfile" asp-route-id="@UserManager.GetUserId(User)">Личный кабинет</a>
                            </li>
                        }
                        @if (User.IsInRole("employee"))
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="AboutProfile" asp-route-id="@UserManager.GetUserId(User)">Личный кабинет</a>
                            </li>
                        }

                        <li class="nav-item">
                            <p class="fst-italic fs-4 ms-5">Добро пожаловать: @User.Identity.Name</p>
                        </li>
                        <li class="nav-item ms-auto">
                            <form asp-action="LogOff" asp-controller="Accounts" method="post" asp-antiforgery="true">
                                <button type="submit" class="btn btn-outline-info">Выйти</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-5">
                            <a class="nav-link text-dark btn btn-outline-info me-2" asp-area="" asp-controller="Accounts" asp-action="Register">Зарегистрироваться</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-info ms-2" asp-area="" asp-controller="Accounts" asp-action="Login">Войти в Айти</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted fixed-bottom bottom-0 text-decoration-none ">
    <div class="container">
        <a class="navbar-brand text-black" asp-area="" asp-controller="Accounts" asp-action="Index">HeadHunterVer1._0</a>

    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>